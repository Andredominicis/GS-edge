  <!-- Som -->
  <audio id="alertSound" src="https://actions.google.com/sounds/v1/alarms/beep_short.ogg"></audio>

  <script>
    let ultimoEstado = 0;

    function atualizarStatus() {
      fetch("http://44.223.43.74:1026/v2/entities/urn:ngsi-ld:device:2007/attrs/a", {
        method: "GET",
        headers: {
          "Fiware-Service": "smart",
          "Fiware-ServicePath": "/",
          "Accept": "application/json"
        }
      })
      .then(r => r.json())
      .then(data => {
        const valor = data.value;
        const box = document.getElementById("statusBuzzer");
        const som = document.getElementById("alertSound");

        if (valor === 1) {
          box.textContent = " Buzzer Ativado!";
          box.className = "status-box ativo";

          if (ultimoEstado === 0) {
            som.currentTime = 0;
            som.play();
          }

        } else {
          box.textContent = " Buzzer Desligado";
          box.className = "status-box inativo";
        }

        ultimoEstado = valor;
      })
      .catch(() => {
        const box = document.getElementById("statusBuzzer");
        box.textContent = " Erro ao conectar";
        box.className = "status-box inativo";
      });
    }

    atualizarStatus();
    setInterval(atualizarStatus, 5000);
  </script>

